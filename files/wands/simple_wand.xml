<Entity tags="wand">
        
    <!-- 
    <Base file="data/entities/base_wand_physics.xml">        -> The wand is subject to gravity (can be kicked)
    <Base file="data/entities/base_item.xml"                 -> The wand is NOT subject to gravity (CANNOT be kicked)
     -->
    
    <!-- <Base file="data/entities/base_wand_physics.xml"> -->
    <Base file="data/entities/base_item.xml" >
        <ItemComponent
            item_name="wand_template_1"
            remove_on_death="1"
            collect_nondefault_actions="1"
            play_hover_animation="1"
            play_spinning_animation="1"
            play_pick_sound="1"
            custom_pickup_string="$itempickup_open"
            ui_sprite="mods/NoitaWandTemplate/files/wands/simple_wand_icon_gfx.xml" >
        </ItemComponent>
    </Base>
    <!-- play_hover_animation       -> if 1, the item will play a hovering animation
         play_spinning_animation    -> if 1, the item will play a spinning animation, if player_hover_animation is 0
         play_pick_sound            -> if 1, plays a default sound when picked
     -->

    <!-- <Base file="data/entities/base_wand.xml"> </Base>  -->
    <Base file="data/entities/base_wand_pickup.xml" > <LuaComponent _enabled="0" script_item_picked_up="" /> </Base>

    <!-- 
    <Base file="data/entities/base_wand.xml"> </Base>                -> play animation when wand is picked up.
    <Base file="data/entities/base_wand_pickup.xml" > [...] </Base>  -> DON'T play animation when wand is picked up.
     -->

	<AbilityComponent
        _enabled="1"
        sprite_file="mods/NoitaWandTemplate/files/wands/simple_wand_gfx.xml"
        swim_propel_amount="0"
        ui_name=""
        drop_as_item_on_death="1"
        cooldown_frames="0"
        entity_count="1"
        reload_time_frames="0"
        mana_charge_speed="600"
        mana_max="50"
        use_gun_script="1"
        >
        <gun_config 
            actions_per_round="1"
            shuffle_deck_when_empty="0"
            reload_time="30"
            deck_capacity="20" >
        </gun_config>
        <gunaction_config 
            spread_degrees="2" 
            fire_rate_wait="30" >
        </gunaction_config>
    </AbilityComponent>
    <!-- add_these_child_actions="BURST_2,COLOUR_RAINBOW" -->
	
	<HotspotComponent 
        _tags="shoot_pos"
        offset.x="12"
        offset.y="0" >
    </HotspotComponent>
	
    <LuaComponent
        _enabled="1"
        execute_on_added="1"
        remove_after_executed="1"
        script_source_file="mods/NoitaWandTemplate/files/wands/simple_wand_setup.lua"
        >
    </LuaComponent>

    <ManaReloaderComponent
        _tags="enabled_in_world,enabled_in_hand,enabled_in_inventory" >
    </ManaReloaderComponent>

    <!-- MAGICAL EFFECT WHEN WAND SPAWN -->

